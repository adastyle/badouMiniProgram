/* pages/order/pay.wxss */

.play_memo {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}

.view_detail {
  width: 100%;
  margin-top: 16rpx;
  font-size: 80%;
  color: rgba(153, 153, 153, 1);
  font-weight: 400;
  display: flex;
  flex-direction: column;
}

.view_detail > label {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.btn {
  background: linear-gradient(180deg, rgba(255, 148, 36, 1) 0%, rgba(249, 95, 72, 1) 100%);
  color: #fff;
  font-weight: 500;
  font-size: 90%;
  padding: 20rpx;
  border-radius: 40rpx;
  text-align: center;
}