/* pages/order/order.wxss */

.img_banner {
  width: 40%;
}

.lab_bg {
  background: linear-gradient(180deg, rgba(255, 148, 36, 1) 0%, rgba(249, 95, 72, 1) 100%);
  border-radius: 20rpx;
  font-size: 60%;
  color: #fff;
  padding: 4rpx 20rpx;
  font-weight: 500;
}

.lab_title {
  font-weight: 500;
}

.play_memo {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.memo {
  width: 100%;
  margin-top: 16rpx;
  font-size: 80%;
  color: rgba(102, 102, 102, 1);
  font-weight: 400;
  display: flex;
  flex-direction: column;
}

.memo label {
  margin-top:8rpx;
}

.btn {
  background: linear-gradient(180deg, rgba(255, 148, 36, 1) 0%, rgba(249, 95, 72, 1) 100%);
  color: #fff;
  font-weight: 500;
  font-size: 100%;
  padding: 12rpx 60rpx;
  border-radius: 40rpx;
}
